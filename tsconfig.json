{
    "compilerOptions": {
        "target": "ES2015",
        "lib": ["dom", "dom.iterable", "es2015"],
        "module": "CommonJS",
        "allowJs": false,
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "dist",
        "strict": true
    },
    "include": ["src"],
    "exclude": ["**/__tests__/**/*.*"]
}
